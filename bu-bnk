#!/bin/sh
#
# Author: rockwolf
# Date: 2010-12-29
# 
# Creates a backup of the bnk dir
#

DIR=/home/rockwolf/bnk

fBackupWeekly()
{
    OLDDIR=/mnt/D/bak/bnk/weekly/old
    NEWDIR=/mnt/D/bak/bnk/weekly/new
    
    fBackup $OLDDIR $NEWDIR
    echo "bnk - weekly backup [OK]"
}

fBackup()
{
    ### remove previous bak-ups
    rm $OLDDIR/*.tar.gz

    ### move current backup from new to old
    mv $NEWDIR/*.tar.gz $OLDDIR

    ### make backup
    tar czf $NEWDIR/bnk`date +%Y-%m-%d`.tar.gz $DIR
}

fBackupMonthly()
{
    OLDDIR=/mnt/D/bak/bnk/monthly/old
    NEWDIR=/mnt/D/bak/bnk/monthly/new
    
    fBackup $OLDDIR $NEWDIR
    echo "bnk - monthly backup [OK]"
}


fUsage()
{
    echo "Usage: bu-bnk"
    exit 1
}

case $# in
0)
    DOW=`date +%u`
    DOM=`date +%d`
    if [ "$DOW" = "1" ];
    then
        fBackupWeekly
    fi
    if [ "$DOM" = "01" ];
    then
        fBackupMonthly
    fi
    ;;
*)
    fUsage
    ;;
esac
